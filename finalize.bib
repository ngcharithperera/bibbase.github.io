@inproceedings{C019,
 author = {Badraddin Alturki and Stephan Reiff-Marganiec and Charith Perera},
 title = {A Hybrid Approach for Data Analytics for Internet of Things},
 booktitle = {Proceedings of the 7th ACM International Conference on the Internet of Things},
 series = {IoT'17},
 year = {2017},
 isbn = {},
 location = {Linz, Austria},
 pages = {},
 numpages = {},
 url = {},
