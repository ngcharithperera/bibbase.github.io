@Inbook{C013,
author={Perera, Charith and Aghaee, Saeed and Blackwell, Alan},
 editor={Diaz, Paloma and Pipek, Volkmar and Ardito, Carmelo and Jensen, Carlos and Aedo, Ignacio and Boden, Alexander},
 chapter={Natural Notation for the Domestic Internet of Things},
 title={End-User Development: 5th International Symposium, IS-EUD 2015, Madrid, Spain, May 26-29, 2015. Proceedings},
 year={2015},
