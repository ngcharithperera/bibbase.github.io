﻿@article {J017,
 author    = {Nunes, Luiz Henrique and Estrella, Julio Cezar and Perera, Charith and Reiff-Marganiec, Stephan and Botazzo Delbem, Alexandre Cláudio},
 title     = {Multi-criteria IoT resource discovery: A comparative analysis},
 journal   = {Software: Practice and Experience},
 publisher = {John Wiley & Sons, Ltd},
